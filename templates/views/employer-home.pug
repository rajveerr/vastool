extends ../layouts/default

block content
  .wrapper.agent-dashboard
    .content-head
      h1 Now all your employees get Aflac benefits at our group rates and you can choose one free
      p.sub-heading Introducing a new family of Aflac benefits
      ul
        li Career Counseling
        li Ethical and financially sound
        li No cost to your company
        li
          a(href='javascript:void(0)') Just the facts!
    h2 Offer Aflac Benefits
      span to ALL your employees
    .primary-content
      form#startEmployee.input-and-button-container(action='new-employer', method='GET', novalidate='novalidate')
        label.hidden(for='username') Agent ID
        input#employerName(type="text", name='employerName', required='required', data-msg-required='Please enter employer name', minlength="2", placeholder="Employer name")
        button#primaryBtn.icon-right-open(type='submit', onclick='$("#startEmployee").validate();') Start
      hr(style='clear:both')
      .table-container
        table.table-minimal
          caption Employee preferences result
          thead
            tr
              th Rank
              th Benefit
              th Votes
          tbody
            tr.modalOpner(href='should open the product details in modal - same as agent dashboard', name='Benefit name')
              td 1
              td Health Advocate
              td 63
            tr
              td 2
              td Career and Talent Coaching
              td 48
            tr
              td 3
              td Legal Services
              td 45
            tr
              td 4
              td Care.com
              td 41
  .dialog
