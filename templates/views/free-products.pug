extends ../layouts/default

block content
  .wrapper.radio-checkbox-list.free-benefits-selection
    .content-head
      span#employerName.above-title #{locals.data.employer.name}
      h1 Start by picking your FREE FOR ALL benefit choice
      p.sub-heading You can choose any ONE of the following free benefits for ALL your employees.
        span.note * After your Aflac representative reaches 70% of your employees
    form#freeBenefitsSelection(action='free-products', method='post', novalidate='novalidate')
      .primary-content
        each product in data.products

          .card-gray
            label.control.control--radio
              input#freeBenefitHealthAdvocate.radio(type='radio', name='freeBenefit', value=`${product.slug}`, required='required', data-msg='Please choose a free benefit')
              .control__indicator
              p
                span.h4 #{product.title}
                span.free FREE!
                span.productDesc #{product.shortDescription}
                  span.see-more.modalOpner(href='products/' + product.slug, name=`${product.title}`)
                span.bullet
                  strong &bull; Best for:
                  | #{product.bestFor}
                span.bullet &bull; 79% of employers pick this benefit
            hr

          label.error(for='freeBenefit')

      .card-blue.secondary-content#benefitChosenCard(style='display: none')
          .free-section
            h4 Free Benefit
            ul#freeBenefitChosen
              li Telemedicine from MeMD
      .form-footer
          span.primary-actions
            button#primaryBtn.icon-right-open(type='submit') Next
          span.secondary-actions.link-btn
            a(href="employer-questions.html") Back
    .dialog
