extends ../layouts/default

block content
  form#feedback.wrapper(action='contact', method='POST', novalidate='novalidate')
    .content-head
      h1 Feedback
    .primary-content
      .card-gray
        .question
          label Comment
          textarea#comment(name='feedbackComment', required='required', data-msg-required='comment please')
    .form-footer
        span.primary-actions
          button#primaryBtn.icon-right-open(type='submit', onclick='$("#feedback").validate();') Submit
        span.secondary-actions.link-btn
          a(href="/") Cancel
