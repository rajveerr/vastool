extends ../layouts/default

block content
  .wrapper.radio-checkbox-list.free-benefits-selection
    .content-head
      span#employerName.above-title #{locals.data.employer.name}
      h1 Benefits summary
      p.sub-heading Hereâ€™s what you have picked! Find out how this is going to help grow your organization in future.
    form#vasBenefitsSummary(action='confirm', method='POST', novalidate='novalidate')
        .primary-content
          table.table-minimal.table-summary
            thead
              tr
                td.title(colspan='2') FREE FOR ALL Benefit
              tr
                th#selectedFreeBenefit #{locals.data.benefitsSummary.freeBenefit.title}
                td.free FREE!
              tr#vasBenefitRowStart
                td.title(colspan='2') New All Employee Benefits
              each product in data.benefitsSummary.additionalBenefits
                tr
                  th #{product.title}
                  td.price
                    span.has-plus #{product.price}
                    span.pemth.field-tip pe/mth
                      span.tip-content Per Employee Per Month
            tbody
              tr
                th Per employee per month
                td.perEmployeePerMonth.price.pepp-total #{locals.data.benefitsSummary.totals.perEmployeePerMonth}
              tr
                th Total premium per month
                td.total-premium
                  span#numberOfEmployees.grey #{locals.data.employer.numberOfEmployees}
                  span.grey *
                  span.perEmployeePerMonth.price.grey #{locals.data.benefitsSummary.totals.perEmployeePerMonth}
                  span.grey =
                  span#totalPremiumAmount.price.total #{locals.data.benefitsSummary.totals.premium}
          h2 Help us engage with your employees (POPS)
          p.sub-heading Chose the best option for an Aflac representative to reach 75% of your employees. We want to make sure each one of them is encouraged to keep a healthy lifestyle.

          .radio-checkbox-list.engagement-choice
            label.hidden(for='popsEngagement') Please select the made of engagament for Aflac agent to engage with your employees
            label.control.control--radio
              input#popsEngagementGroupEmail.radio(type='radio', name='popsEngagement', value='Group Email', required='required', data-msg='Please select', data-msg-required='Please select')
              .control__indicator
              p
                span.h4 Group email
                span.productDesc We will share Aflac benefits information via a group Email
            hr
            label.control.control--radio
              input#popsEngagementOfficeVisit.radio(type='radio', name='popsEngagement', value='Office Visit')
              .control__indicator
              p
                span.h4 Office visit
                span.productDesc Come to our office. We will provide space to schedule appointments with employees.
            hr
            label.control.control--radio
              input#popsEngagementTeleconferenceOrWebcasts.radio(type='radio', name='popsEngagement', value='Teleconference Or Webcasts')
              .control__indicator
              p
                span.h4 Teleconference/Webcasts
                span.productDesc Connect through teleconference or webcasts remotely
            hr
            label.control.control--radio
              input#popsEngagementPaycheckAttachment.radio(type='radio', name='popsEngagement', value='Paycheck Attachment')
              .control__indicator
              p
                span.h4 Paycheck attachment
                span.productDesc Provide information on benefits attached to the paychecks
        .form-footer
            span.primary-actions
              button#primaryBtn(type='submit', onclick="$('#vasBenefitsSummary').validate()") Confirm
            span.secondary-actions.link-btn
              a(href="additional-products") Back
        .dialog
